---
// Astro wrapper component for the KnowledgeGraph React component
// This follows Astro best practices for integrating React components

import ClusterListWrapper from './ClusterList/ClusterListWrapper';

// Props interface for TypeScript support
interface Props {
  title?: string;
  description?: string;
}

const { title = "Cluster List", description = "Explore and organize your clusters with interactive Q&A cards" } = Astro.props;
---

<div class="cluster-list-container">
  <!-- 
    React component with client:load directive for immediate hydration
    This ensures the component is interactive as soon as the page loads
  -->
  <div id="cluster-list-container">
    <ClusterListWrapper client:load />
  </div>
</div>


<style>
  .cluster-list-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  }
  
  /* Smooth transition for loading state */
  #loading-state {
    transition: opacity 0.3s ease-out;
  }
  
  #cluster-list-container {
    transition: opacity 0.3s ease-in;
  }
</style>
