---
// Knowledge Graph page - dedicated page for the ThinkEx knowledge platform
import Layout from '../layouts/Layout.astro';
import KnowledgeGraphWrapper from '../components/KnowledgeGraphWrapper.astro';

// Page metadata for SEO
const title = "ThinkEx Knowledge Platform";
const description = "Transform ChatGPT conversations into organized knowledge maps. Explore, organize, and connect your learning with our interactive knowledge platform.";

// Get graphId from URL params or use default
const graphId = Astro.url.searchParams.get('graphId') || 'thinkex-demo';

// Construct canonical URL safely
const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : new URL(Astro.url.pathname, Astro.url.origin);
---

<Layout title={title} description={description} canonicalURL={canonicalURL}>
  <main>
    <KnowledgeGraphWrapper 
      graphId={graphId}
      title="ThinkEx Knowledge Platform"
      description="Transform your conversations into organized knowledge maps"
    />
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
  }
</style>
